{
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "include": ["src", "types"]
}
